{% extends 'back_base.html.twig' %}


{% block main %}

	<div class="row">
		<div class="col-md-12">
			<div class="tile">
				<div class="tile-body">
					<div class="table-responsive">
						<div class="d-flex">
							<div class="mr-auto p-2">
								<h1>Packs
								</h1>
							</div>
							<div class="p-2">
								<a class="btn btn-outline-warning " href="{{ path('app_packs_edit', {'id': pack.id}) }}">edit</a>
							</div>
							<div class="p-2">
								{{ include('packs/_delete_form.html.twig') }}
							</div>
						</div>
						<table class="table">
							<tbody>
								<tr>
									<th>Image</th>
									<td><img src="{{ asset('uploads/' ~ pack.image) }}" alt="" width="100" height="100"></td>
								</tr>
								<tr>
									<th>Nom</th>
									<td>{{ pack.nom }}</td>
								</tr>
								<tr>
									<th>Description</th>
									<td>{{ pack.description }}</td>
								</tr>
								<tr>
									<th>Prix</th>
									<td>{{ pack.prix }}</td>
								</tr>


							</tbody>
						</table>

						<a class="btn btn-secondary" href="{{ path('app_packs_index') }}">back to list</a>


					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
