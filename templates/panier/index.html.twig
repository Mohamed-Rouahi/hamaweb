{% extends 'front_base.html.twig' %}



{% block main %}

<style>
body {
  background: #FCD5CE;
  background: -webkit-linear-gradient(to right, #FCD5CE, #FFCCD5);
  background: linear-gradient(to right, #FCD5CE, #FFCCD5);
  min-height: 100vh;
}
</style>

<div class="px-4 px-lg-0">
  <!-- For demo purpose -->
  <div class="container text-white py-5 text-center">
    <h1 class="display-4" style="margin-top:80px;color:#1D3557;font-family:Lucida">Details de votre Reservation</h1>
    <h3 class="lead mb-0" style="color:#1D3557;font-family:Lucida"> Veuillez proceder au paiement pour confirmer votre reservation</h3>
    <p class="lead">
            <u></u></a>
    </p>
  </div>
  <!-- End -->

  <div class="pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Services</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Prix</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Quantité</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Supprimer</div>
                  </th>
                </tr>
              </thead> 
              <tbody>
              	 {% for service in services %}
                <tr>
                  <th scope="row" class="border-0">
                    <div class="p-2">
                      <img src="{{ asset ('uploads/' ~ service.image) }}" alt="cannot get photo" width="70" class="img-fluid rounded shadow-sm">
                      <div class="ml-3 d-inline-block align-middle">
                        <h5 class="mb-0"> <a href="#" class="text-dark d-inline-block align-middle"></a></h5><span class="text-muted font-weight-normal font-italic d-block">{{ service.nom }}</span>
                      </div>
                    </div>
                  </th>
                  <td class="border-0 align-middle"><strong>{{ service.prix }}</strong></td>
                  <td class="border-0 align-middle"><strong>3</strong></td>
                  <td class="border-0 align-middle"><i class="fa fa-trash"></i></td>
                </tr>
              
             
              </tbody>
              {% endfor %}
            </table>
          </div>
          <!-- End -->
        </div>
      </div>

      <div class="row py-5 p-4 bg-white rounded shadow-sm">
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Coupon code</div>
          <div class="p-4">
            <p class="font-italic mb-4">Si vous avez un coupon de recudction, veuillez l'introduire dans cette box</p>
            <div class="input-group mb-4 border rounded-pill p-2">
              <input type="text" placeholder="appliquer le coupon" aria-describedby="button-addon3" class="form-control border-0">
              <div class="input-group-append border-0">
                <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill"><i class="fa fa-gift mr-2"></i>Appliquer le coupon</button>
              </div>
            </div>
          </div>
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Instructions</div>
          <div class="p-4">
            <p class="font-italic mb-4">Si vous avez un commentaire, vous pouvez le laisser dans le box</p>
            <textarea name="" cols="30" rows="2" class="form-control"></textarea>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Résumé de la réservation </div>
          <div class="p-4">
            <p class="font-italic mb-4"></p>
            <ul class="list-unstyled mb-4">
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Avant total </strong><strong>$390.00</strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted"> Coupon de réduction</strong><strong>$10.00</strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Tax</strong><strong>$0.00</strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Total</strong>
                <h5 class="font-weight-bold">$400.00</h5>
              </li>
            </ul>
            <form action="/checkout" method="POST">
      <button type="submit" class="btn btn-dark px-4 rounded-pill btn-lg" style="width:50%;margin-left:25%">Proceder au Paiement</button>
    </form>

          </div>
        </div>
      </div>

    </div>
  </div>
</div>


{% endblock %}
